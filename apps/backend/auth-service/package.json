{
  "name": "@care-for-all/auth-service",
  "version": "1.0.0",
  "description": "Authentication service for Care For All",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:local": "bun --env-file=.env.local --watch src/index.ts",
    "start": "bun src/index.ts",
    "start:local": "bash start-local.sh",
    "test:local": "bash test-local.sh",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "hono": "^4.6.14",
    "@hono/zod-openapi": "^0.16.4",
    "zod": "^3.23.8",
    "@scalar/hono-api-reference": "^0.5.177",
    "@care-for-all/shared-types": "workspace:*",
    "@care-for-all/shared-config": "workspace:*",
    "@care-for-all/shared-logger": "workspace:*",
    "@care-for-all/shared-otel": "workspace:*",
    "mongoose": "^8.8.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "bun-types": "^1.1.38",
    "typescript": "^5.7.2",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7"
  }
}