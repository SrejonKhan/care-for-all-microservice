# Donation Service Environment Variables
# Copy this file to .env or .env.local and update values

# Service Configuration
NODE_ENV=development
PORT=3003
SERVICE_NAME=donation-service

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/donation-service

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=care-for-all

# JWT Configuration (for authentication middleware)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Logging
LOG_LEVEL=info

# OpenTelemetry (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_TRACES_ENABLED=false

# Service URLs
AUTH_SERVICE_URL=http://localhost:3000
CAMPAIGN_SERVICE_URL=http://localhost:3002

