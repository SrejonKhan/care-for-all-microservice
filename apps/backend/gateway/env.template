# API Gateway Environment Variables
# Copy this file to .env or .env.local and update values

# Service Configuration
NODE_ENV=development
PORT=3001
SERVICE_NAME=gateway

# Service URLs
AUTH_SERVICE_URL=http://localhost:3000
CAMPAIGN_SERVICE_URL=http://localhost:3002
DONATION_SERVICE_URL=http://localhost:3003
PAYMENT_SERVICE_URL=http://localhost:3004
TOTALS_SERVICE_URL=http://localhost:3005
CHAT_SERVICE_URL=http://localhost:3006

# Logging
LOG_LEVEL=info

# OpenTelemetry (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
